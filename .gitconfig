# This is Git's per-user configuration file.
# [user]
# Please adapt and uncomment the following lines:
#   name    = First Last
#   email   = email@email.email
[core]
    editor  = /usr/bin/vim

[alias]
    #add
    a       = add
    aa      = add .
    ap      = add -p

    #blame
    bl      = blame

    #branch
    b       = branch
    ba      = branch -a
    bc      = branch -vv --list --contains @
    bd      = branch -d
    bdd     = branch -D
    bm      = branch -vv --list --merged @
    bdm     = "!git branch --merged | egrep -v '[*]|trunk|staging|production' | xargs -n 1 git branch -d"
    bunup   = branch --unset-upstream

    #checkout
    co      = checkout
    cb      = checkout -b
    cop     = checkout -p

    #diff
    df      = diff
    dfc     = diff --cached
    dc      = diff --word-diff=color --cached

    #cherry-pick
    cp      = cherry-pick -x -s
    cpa     = cherry-pick --abort
    cpc     = cherry-pick --continue

    #clone
    cl      = clone

    #commit
    c       = commit
    cm      = commit -m
    amend   = commit --amend
    am      = commit --amend

    #fetch
    f       = fetch
    fo      = fetch origin
    fa      = fetch --all
    fop     = fetch origin --prune

    #log
    l       = log --graph --abbrev-commit --decorate --all --format=format:'%C(bold dim magenta)%h %C(reset)%C(bold blue)%aD %C(reset)%C(green)(%ar)%C(reset)%C(bold red)%d %n''%C(reset)%C(white)%s %C(reset)%C(dim yellow)<%aN>%C(reset)'
    ws      = log --oneline --check
    lp      = log -p

    #merge
    mff     = merge --ff-only
    mnoff   = merge --no-ff

    #push
    pf      = push --force
    sup     = push --set-upstream origin

    #reset
    rh      = reset HEAD
    rs      = reset --soft
    rsh     = reset --soft HEAD^

    #rebase
    rb      = rebase
    rba     = rebase --abort
    rbc     = rebase --continue
    rbi     = rebase --interactive
    rbs     = rebase --skip
    onto    = rebase --onto

    #remote
    rso     = remote show origin
    prune   = remote prune origin
    ra      = remote add

    #reset
    setto   = reset --hard

    #revert
    rv      = revert

    #stash
    st      = stash
    sa      = stash apply
    sd      = stash drop
    sl      = stash list
    sp      = stash save --patch
    spop    = stash pop
    ss      = stash show -p

    #tag
    ta      = tag -a
    tl      = tag --list -n99
    tlr     = tag --list release* -n99
    tlst    = tag --list stable* -n99
    td      = tag --delete

[push]
    default = simple
